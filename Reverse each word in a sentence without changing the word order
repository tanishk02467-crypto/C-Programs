#include <stdio.h>
#include <string.h>

void reverse(char *start, char *end) {
    while (start < end) {
        char temp = *start;
        *start = *end;
        *end = temp;
        start++;
        end--;
    }
}

int main() {
    char str[200];
    char *word_start = NULL;
    char *temp = str;

    printf("Enter a sentence: ");
    fgets(str, sizeof(str), stdin);

    word_start = str;

    while (*temp) {
        if (*temp == ' ' || *temp == '\n' || *(temp + 1) == '\0') {
            char *word_end = (*temp == ' ' || *temp == '\n') ? temp - 1 : temp;
            reverse(word_start, word_end);
            word_start = temp + 1;
        }
        temp++;
    }

    printf("Modified sentence: %s", str);
    return 0;
}